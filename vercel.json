{
  "version": 2,
  "buildCommand": "chmod +x build.sh && ./build.sh",
  "outputDirectory": "backend/dist",
  "installCommand": "npm install",
  "framework": null,
  "rewrites": [
    { "source": "/api/(.*)", "destination": "/index.js" },
    { "source": "/socket.io/(.*)", "destination": "/index.js" },
    { "source": "/(.*)", "destination": "/index.js" }
  ]
}
